<phpunit
  backupGlobals="false"
  backupStaticAttributes="false"
  syntaxCheck="false"
  convertErrorsToExceptions="true"
  convertNoticesToExceptions="true"
  convertWarningsToExceptions="true"
>
  <filter>
    <whitelist>
      <directory suffix=".php">../src/mg/Ding</directory>
    </whitelist>
  </filter>
  <testsuites>
    <testsuite name="Tests">
      <directory suffix=".php">Ding</directory>
    </testsuite>
  </testsuites>
</phpunit>
